select d.name,p.name,s.name,a.name from (select rownum as id,name from(select name from occupations where occupation='Doctor' order by name))d full outer join (select rownum as id,name from(select name from occupations where occupation='Professor' order by name))p on d.id=p.id full outer join (select rownum as id,name from(select name from occupations where occupation='Singer' order by name))s on p.id=s.id full outer join (select rownum as id,name from(select name from occupations where occupation='Actor' order by name))a on a.id=s.id; 
